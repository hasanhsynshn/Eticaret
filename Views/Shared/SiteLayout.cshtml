                        </ul>
                    </li>
                    <li><a href="#">İletişim</a></li>
                </ul>
                <div class="clear"></div>
            </div>
        </div>
    </div>
    <!-- ======================================================================
                                    END HEADER
    ======================================================================= -->
    <div class="content">
        @{
            Html.RenderAction("Slider", "Home");
        }

        @RenderBody()

        @{
            Html.RenderAction("Markalar", "Home");
        }
    </div>
    <div class="footer">
        <div class="container">
            <div class="row">
                <div class="col-md-2 col-xs-6">
                    <ul class="socials">
                        <li><a href="#"><img src="/Content/Zeon/images/elements/socials/facebook.png" alt="facebook" />Facebook</a></li>
                        <li><a href="#"><img src="/Content/Zeon/images/elements/socials/twitter.png" alt="twitter" />Twitter</a></li>
                        <li><a href="#"><img src="/Content/Zeon/images/elements/socials/youtube.png" alt="youtube" />Youtube</a></li>
                        <li><a href="#"><img src="/Content/Zeon/images/elements/socials/googleplus.png" alt="google" />Google+</a></li>
                    </ul>
                </div>
                <div class="col-md-2 col-xs-6">
                    <ul>
                        <li><a href="#">Register now</a></li>
                        <li><a href="#">Subscribe for newsletter</a></li>
