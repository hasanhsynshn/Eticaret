
@{
    ViewBag.Title = "Markalar";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
@model IEnumerable<ETicaret2020.WebUI.Marka>
@section head{
    <link href="/Content/Flatlab Main Files/admin/template_content/assets/fancybox/source/jquery.fancybox.css" rel="stylesheet" />

}
<section class="panel">
    <header class="panel-heading">
        Markalar
    </header>
    <br />
    <br />

    <div class="panel-body">
        <div class="adv-table editable-table ">
            <div class="clearfix">
                <div class="btn-group">
                    <button id="editable-sample_new" class="btn green">
                        <a href="/Admin/MarkaEkle" class="btn btn-success"> Yeni Marka <i class="icon-plus"></i></a>
                    </button>
                </div>

            </div>
            <div class="space15"></div>
            <table class="table table-striped table-hover table-bordered" id="editable-sample">
                <thead>
                    <tr>
                        <th>Marka Adı</th>
                        <th>Açıklama </th>
                        <th>Resmi Göster</th>
                        <th>Güncelle</th>
                        <th>Sil</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var marka in Model)
                    {
                        <tr class="">
                            <td>@marka.Adi</td>
                            <td>@marka.Aciklama</td>
                            <td>
                                @if (marka.Resim != null)
                                {
                                    <a class="fancybox" href="@ETicaret2020.WebUI.AppClasses.Context.Baglanti.Resim.FirstOrDefault(x=>x.Id==marka.ResimID).OrtaYol">
                                        <i class="icon-eye-open"></i>
                                    </a>
                                }

                            </td>
                            <td>
                                <a class="delete" href="/Admin/MarkaGuncelle/@marka.Id">
                                    <i class="icon-add"></i>
                                </a>
                            </td>


                            <td><a class="delete" href="/Admin/MarkaSil/@marka.Id"><i class="icon-pencil"></i></a></td>


                        </tr>
                    }


                </tbody>
            </table>
        </div>
    </div>
</section>
<script src="/Content/Flatlab Main Files/admin/template_content/assets/fancybox/source/jquery.fancybox.js"></script>
<script type="text/javascript">
    $(function () {
        //    fancybox
        jQuery(".fancybox").fancybox();
    });

</script>