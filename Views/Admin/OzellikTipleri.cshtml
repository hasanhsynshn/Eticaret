
@{
    ViewBag.Title = "Özellik Tipleri";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
@model IEnumerable<ETicaret2020.WebUI.OzellikTip>

    <section class="panel">
        <header class="panel-heading">
            Özellikler
        </header>
        <div class="panel-body">
            <div class="adv-table editable-table ">
                <div class="clearfix">
                    <div class="btn-group">
                        <button id="editable-sample_new" class="btn green">
                            <a href="/Admin/OzellikTipEkle" class="btn btn-success"> Yeni Özellik Tipi <i class="icon-plus"></i></a>
                        </button>
                    </div>

                </div>
                <div class="space15"></div>
                <table class="table table-striped table-hover table-bordered" id="editable-sample">
                    <thead>
                        <tr>
                            <th>Özellik Tip Adı</th>
                            <th>Açıklama </th>
                            <th>Kategorisi </th>
                            <th>Güncelle</th>
                            <th>Sil</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var tip in Model)
                        {
                        <tr class="">
                            <td>@tip.Adi</td>
                            <td>@tip.Aciklama</td>
                            @if (tip.Kategori != null)
                            {
                                <td>@tip.Kategori.Adi</td>
                            }


                            <td><a class="edit" href="/Admin/OzellikTipGuncelle/@tip.Id"><i class="icon-pencil"></i></a></td>

                            <td>
                                <a class="delete" href="/Admin/ÖzellikTipSil/@tip.Id">
                                    <i class="icon-trash"></i>
                                </a>
                            </td>

                        </tr>
                        }


                    </tbody>
                </table>
            </div>
        </div>
    </section>