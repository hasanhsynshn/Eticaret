
@{
    ViewBag.Title = "MarkaEkle";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}


<br />
<br />
<br />
    <div class="row">
        <div class="col-lg-12">
            <section class="panel">
                <header class="panel-heading">
                   Marka Ekle
                </header>
                <div class="panel-body">
                    <form class="form-horizontal tasi-form" action="/Admin/MarkaEkle"enctype="multipart/form-data" method="post">
                        <div class="form-group">
                            <label class="col-sm-2 col-sm-2 control-label">Marka Adı</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" name="Adi">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 col-sm-2 control-label">Açıklama</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" name="Aciklama">
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-3">Marka Resmi:</label>
                            <div class="controls col-md-9">
                                <div class="fileupload fileupload-new" data-provides="fileupload">
                                    <span class="btn btn-white btn-file">
                                        <span class="fileupload-new"><i class="icon-paper-clip"></i> Resim Seç</span>

                                        <input type="file" class="default" name="fileUpload" />
                                    </span>

                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-lg-offset-0 col-lg-12">
                                <button class="btn btn-danger" type="submit">Kaydet</button>
                            </div>
                    </form>
                </div>
            </section>
          

        </div>
    </div>