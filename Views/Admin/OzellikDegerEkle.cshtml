
@{
    ViewBag.Title = "Ozellik Deger Ekle";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br /><br /><br /><br />

@model IEnumerable<ETicaret2020.WebUI.OzellikTip>
<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                Özellik Değer Ekle
            </header>
            <div class="panel-body">
                <form class="form-horizontal tasi-form" action="/Admin/OzellikDegerEkle" method="post">
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">Özellik Değer Adı</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" name="Adi">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">Açıklama</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" name="Aciklama">
                        </div>
                    </div>
                    <select class="form-control m-bot15" name="OzellikTipID">
                        @foreach (var tip in Model)
                        {
                            <option value="@tip.Id">@tip.Adi</option>
                        }

                    </select>
                    <div class="form-group">
                        <div class="col-lg-offset-0 col-lg-12">
                            <button class="btn btn-danger" type="submit">Kaydet</button>
                        </div>
                </form>
            </div>
        </section>


    </div>
</div>